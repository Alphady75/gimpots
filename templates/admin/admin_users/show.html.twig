{% extends 'admin.html.twig' %}

{% block title %}Compte utiilsateur{% endblock %}

{% block body %}
    <h1>Compte utiilsateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>
                    <span class="badge badge-primary">
                        {% if is_granted('ROLE_ADMIN') %}
                            Administrateur
                        {% endif %}
                    </span>
                </td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td><i class="fa fa-lock"></i>****</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_users_index') }}" class="btn btn-light">Comptes utilisateur</a>

    <a href="{{ path('admin_users_edit', {'id': user.id}) }}" class="btn btn-light">Modifier</a>

    {{ include('admin/admin_users/_delete_form.html.twig') }}

{% endblock %}
